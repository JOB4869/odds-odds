<% content_for :title, "New product" %>

<div class="flex flex-col items-center w-full max-w-md mx-auto bg-white shadow-lg rounded-lg p-6 py-2">
  <div class="w-full">
    <div class="py-2 w-full">
      <h1 class="text-2xl font-semibold flex items-center" data: { testid: "product-new-title" }>เพิ่มสินค้าใหม่</h1>
    </div>
    <div class="py-4">
      <%= render "form", product: @product, button_text: "สร้างสินค้า" %>        
    </div>
    <div>
      <%= link_to products_path, class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-base font-medium text-black bg-gray-50 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
      data: { testid: "product-new-back-to-products-link" } do %>
        กลับหน้าสินค้าตัวเอง
      <% end %>
    </div>
  </div>
</div>