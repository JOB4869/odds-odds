<%= link_to product, class: "block" do %>
  <div id="<%= dom_id product %>">
    <div class="w-46 h-80 flex flex-col justify-between">
      <div class="flex-1 flex items-center justify-center">
        <% if product.images.attached? %>
          <%= image_tag product.images.first, class: "w-full h-full object-cover rounded-lg" %>
        <% else %>
          <div class="w-full h-full bg-gray-100 rounded-lg flex items-center justify-center">
            <span class="text-gray-400">ไม่มีรูปภาพ</span>
          </div>
        <% end %>
      </div>
      <div class="text-center mt-4">
        <div class="text-xl font-semibold mb-1 line-clamp-3"><%= product.name %></div>
        <div class="text-lg"><%= number_to_currency(product.price, unit: "", precision: 0) %> บาท</div>
      </div>
    </div>
  </div>
<% end %>