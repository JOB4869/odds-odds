<%= form_with(model: product, class: "contents", data: { testid: "product-form" }) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul class="list-disc ml-6">
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name,"ชื่อสินค้า", class: "block text-base font-medium", data: { testid: "product-name-label" } %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-gray-50", {"border-gray-400 focus:outline-blue-600": product.errors[:name].none?, "border-red-400 focus:outline-red-600": product.errors[:name].any?}], data: { testid: "product-name-input" } %>
  </div>

  <div class="my-5">
    <%= form.label :description,"คำอธิบายสินค้า", class: "block text-base font-medium", data: { testid: "product-description-label" } %>
    <%= form.text_area :description, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-gray-50", {"border-gray-400 focus:outline-blue-600": product.errors[:description].none?, "border-red-400 focus:outline-red-600": product.errors[:description].any?}], rows: 6, data: { testid: "product-description-input" } %>
  </div>

  <div class="my-5">
    <%= form.label :images,"รูปภาพสินค้า", class: "block text-base font-medium", data: { testid: "product-images-label" } %>
    <%= form.file_field :images, multiple: true, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-gray-50", {"border-gray-400 focus:outline-blue-600": product.errors[:images].none?, "border-red-400 focus:outline-red-600": product.errors[:images].any?}], data: { testid: "product-images-input" } %>
  </div>

  <div class="my-5">
    <%= form.label :price,"ราคาสินค้า", class: "block text-base font-medium", data: { testid: "product-price-label" } %>
    <%= form.text_field :price, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full bg-gray-50", {"border-gray-400 focus:outline-blue-600": product.errors[:price].none?, "border-red-400 focus:outline-red-600": product.errors[:price].any?}], placeholder: "กรอกเป็นตัวเลข บาท.", data: { testid: "product-price-input" } %>
  </div>

  <div class="inline">
    <%= form.submit "ยืนยัน", class: "w-full px-4 py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2", data: { testid: "product-submit-button" } %>
  </div>
<% end %>
