<div class="flex flex-col items-center w-full max-w-md mx-auto rounded-lg">
  <div class="w-full flex justify-between items-center px-8 py-2">

    <%= link_to users_path, class: "px-4 py-2 flex justify-center" do %>
      <span class="bg-gray-200 p-2 rounded-full inline-block text-2xl">🧑</span>
    <% end %>

    <%= link_to beers_path, class: "px-4 py-2 flex justify-center" do %>
      <span class="bg-gray-200 p-3 rounded-full inline-block text-4xl">🍺</span>
    <% end %>

    <%= link_to current_carts_path, class: "px-4 py-2 flex justify-center relative" do %>
      <span class="bg-gray-200 p-2 rounded-full inline-block text-2xl">🛍️</span>
      <% if @current_cart&.items&.any? %>
        <span class="bg-red-500 text-white text-xs px-2 py-1 rounded-full absolute -top-0.75 -right-1">
          <%= @current_cart.items.count %>
        </span>
      <% end %>
    <% end %>

  </div>
</div>
