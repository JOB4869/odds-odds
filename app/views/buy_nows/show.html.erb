<% content_for :title, "Showing buy now" %>

<div class="flex flex-col items-center w-full max-w-md mx-auto bg-white shadow-lg rounded-lg p-6">
  <div class="w-full">
    <h1 class="text-2xl font-semibold mb-6">รายละเอียดการสั่งซื้อ</h1>

    <div class="space-y-6">
      <div>
        <h2 class="text-lg font-medium text-gray-900">สินค้า</h2>
        <div class="mt-2 flex items-center space-x-4">
          <%= image_tag @product.images.first, class: "w-20 h-20 object-cover rounded-lg" if @product.images.attached? %>
          <div>
            <p class="text-lg font-medium text-gray-900"><%= @product.name %></p>
            <p class="text-sm text-gray-500">จำนวน: <%= @buy_now.amount %></p>
            <p class="text-lg font-semibold text-blue-600">ราคา: <%= number_to_currency(@product.price, unit: "฿") %></p>
          </div>
        </div>
      </div>

      <div>
        <h2 class="text-lg font-medium text-gray-900">สถานะการสั่งซื้อ</h2>
        <div class="mt-2">
          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium
            <%= @buy_now.status == 'completed' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
            <%= @buy_now.status == 'completed' ? 'ชำระเงินแล้ว' : 'รอการตรวจสอบ' %>
          </span>
        </div>
      </div>

      <% if @buy_now.proof_of_payment.attached? %>
        <div>
          <h2 class="text-lg font-medium text-gray-900">หลักฐานการชำระเงิน</h2>
          <div class="mt-2">
            <%= image_tag @buy_now.proof_of_payment, class: "w-full h-auto rounded-lg" %>
          </div>
        </div>
      <% end %>

      <div class="flex justify-end space-x-4">
        <%= link_to root_path, class: "inline-flex justify-center py-2 px-4 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          กลับไปหน้าแรก
        <% end %>
      </div>
    </div>
  </div>
</div>

