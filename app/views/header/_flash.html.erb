<% if flash[:notice]%>
  <div class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 animate-fade-in-down bg-green-100 border border-green-400 text-green-700 px-4 py-2 rounded-md inline-block min-w-fit shadow-md" 
       role="alert"
       data-controller="auto-hide"
       data-auto-hide-timeout-value="3000">
    <%= flash[:notice] %>
  </div>
<% end %>

<% if flash[:alert]%>
  <div class="fixed top-20 left-1/2 transform -translate-x-1/2 z-50 animate-fade-in-down bg-red-100 border border-red-400 text-red-700 px-4 py-2 rounded-md inline-block min-w-fit shadow-md" 
       role="alert"
       data-controller="auto-hide"
       data-auto-hide-timeout-value="3000">
    <%= flash[:alert] %>
  </div>
<% end %>

<% content_for :styles do %>
  <style>
    @keyframes fadeInDown {
      from {
        opacity: 0;
        transform: translate(-50%, -2rem);
      }
      to {
        opacity: 1;
        transform: translate(-50%, 0);
      }
    }

    .animate-fade-in-down {
      animation: fadeInDown 0.5s ease-out;
    }
  </style>
<% end %>