<%= turbo_frame_tag "modal" do %>
  <div class="modal">
    <div class="flex flex-col items-center w-full max-w-md mx-auto rounded-lg p-6 py-2">
      <div class="w-full">
        <h1 class="text-xl font-semibold flex items-center mb-6" data: { testid: "sign-out-title" }>
          ออกจากระบบ
        </h1>
        <div class="py-2 w-full">
          <p class="text-base" data: { testid: "sign-out-description" }> 
            คุณต้องการลงชื่อออกจากระบบหรือไม่
          </p>
        </div>
      <div class="flex flex-col items-center w-full max-w-md mx-auto rounded-lg text-white">
        <div class="w-full px-8 py-2">
          <%= button_to sign_out_path, method: :delete,data: { turbo: false ,testid: "confirm-sign-out-button" }, class: "w-full flex justify-center py-2 px-4 rounded-md text-base font-medium bg-red-600 hover:bg-red-700" do %>
            <span class="text-white">ออกจากระบบ</span>
          <% end %>
        </div>
      </div>
      
      <div class="flex flex-col items-center w-full max-w-md mx-auto rounded-lg ">
        <div class="w-full flex justify-between items-start px-8 py-2">
          <%= link_to users_path, class: "w-full flex justify-center py-2 px-4 rounded-md text-base font-medium bg-gray-50 hover:bg-gray-100 ", data: { testid: "cancel-button" } do %>
            <span class="text-black">ยกเลิก</span>
          <% end %>
        </div>
      </div>
      </div>
    </div>
  </div>
<% end %>

